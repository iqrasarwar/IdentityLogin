<style>
.card
{
    flex-direction:row;
    border:none;
    gap:10px;
    width:275px;
    padding:10px;
    border-radius:none;
    /*background-color:rgba(0, 0, 0, 0.00001);*/
}
.card-body{
    padding:0px;
    padding-left:10px;
    display:flex;
    flex-direction:column;
    justify-content:center;

}
.card-img-top
{
    width:100%;
    height:130px;
    border-radius:none;
}
.video-title
{
    font-family: "Roboto","Arial",sans-serif;
    font-size: 0.9rem;
    line-height: 1.3rem;
    font-weight: 500;
    max-height: 4rem;
    max-width:230px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.card p
{
    color:#606060;
    margin:0;
    font-size:14px;
}
h6
{
    margin:0;
}
.dot
{
    font-weight:bolder;
}
.columnCard{
    flex-direction:column !important;
}
.columnCard .card-body{
    padding:0px;
}
.channel-pic
{
    width:30px;
    height:30px;
    border-radius:50%;
}
.columnCard .card-body{
    display:flex;
    flex-direction:row;
    gap:5px;
}
</style>
@{
    string column = " column";
}
@if(column != " column")
{
    <div class="card col-lg-3 col-md-4 col-sm-6" >
      <img class="card-img-top" src="~/css/images/profile.jpg" alt="Card image cap">
      <div class="card-body">
        <h6 class="video-title">Partial Views Tutorial In DotNet | C# | Web Developmet </h6>
        <p class="video-channel">Learn DotNet</p>
        <p>
            <span class="video-views">30k Views</span>
            <span class="dot">.</span>
            <span class="video-time">7 days ago</span>
        </p>
      </div>
    </div>
}
else
{
    <div class="card columnCard col-lg-3 col-md-4 col-sm-6" >
  <img class="card-img-top" src="~/css/images/profile.jpg" alt="Card image cap">
  <div class="card-body">
    <img class="channel-pic" src="~/css/images/profile.jpg" />
    <div class="video-info">
        <h6 class="video-title">Partial Views Tutorial In DotNet | C# | Web Developmet </h6>
        <p class="video-channel">Learn DotNet</p>
        <p class="video-views video-time">
            30k Views
            <span class="dot">.</span> 
            7 days ago
        </p>  
    </div>
  </div>
</div>
}
